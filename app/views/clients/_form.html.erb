<%= form_with model: @client, local: true do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br> 
    <br>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <br>
    <br>
    <%= f.label :height %>
    <%= f.number_field :height %> ("Inches") 
    <br>
    <br> 
    <%= f.label :initial_weight %>
    <%= f.number_field :initial_weight %> ("lbs")
    <br>
    <br>
    <%= f.label :phone_number %>
    <%= f.number_field :phone_number %> 
    <br>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <br>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
    <br>
    <br>
    <%= f.label :current_weight %> 
    <%= f.number_field :current_weight %> ("lbs")
    <br>
    <br>
    <%= f.label :goal_weight %>
    <%= f.number_field :goal_weight %> ("lbs")
    <br>
    <br>
        <%= f.fields_for :appointments do |a| %>

            <%= a.hidden_field :trainer_id, value: current_user.id %> 

            <%= a.label :appointment_time %>
            <%= a.datetime_field :appointment_time %>
            <br>
            <br>
            <%= a.label :price %>
            <%= a.number_field :price %>
            <br>
            <br>
            <%= a.label :paid_for %>
            <%= a.check_box :paid_for %>
            <br>
            <br>
        <% end %>
    <%= f.submit %>

    <% end %>
    
    

