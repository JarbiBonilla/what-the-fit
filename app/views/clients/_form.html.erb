# form for new and editing clients. trainers will has this ability.


<%= form_for(@client) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br> 
    <br>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <br>
    <br>
    <%= f.label :height %>
    <%= f.number_field :height %>
    <br>
    <br> 
    <%= f.label :initial_weight %>
    <%= f.number_field :initial_weight %>
    <br>
    <br>
    <%= f.label :phone_number %>
    <%= f.number_field :phone_number %>
    <br>
    <br>
    <%= f.label :email %>
    <%= f.email :email %>
    <br>
    <br>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
    <br>
    <br>
    <%= f.label :current_weight %>
    <%= f.number_field :current_weight %>
    <br>
    <br>
    <%= f.label :goal_weight %>
    <%= f.number_field :goal_weight %>
    <br>
    <br>
    <%= f.submit %>

    <% end %>
    
    

