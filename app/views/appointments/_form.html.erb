# create a form for a new appointment and to edit an appointment.


<%= form_for :appointment do |f| %>

    <%= f.hidden_field :client_id %>

    <%= f.label :appointment_time %>
    <%= f.datetime_field :appointment_time %>
    <br>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <br>
    <br>
    <%= f.label :paid_for %>
    <%= f.check_box :paid_for %>
    <br>
    <br>

    <%= f.submit %>

    <% end %>
