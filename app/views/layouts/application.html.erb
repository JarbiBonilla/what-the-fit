<!DOCTYPE html>
<html>
  <head>
    <title>WhatTheFit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div>
  <% if logged_in? %>
    <%= link_to "Log out", logout_path, method: "delete" %> <br>
    <%= link_to "Your Profile", trainer_path(current_user.id) %> <br>
  <% else %>
    <%= link_to "Sign Up", signup_path, method: "get" %> <br>
    <%= link_to "Log In", login_path, method: "get" %> <br>
    <%= link_to('Log in with Facebook', '/auth/facebook') %> <br>
  <% end %>
  </div>
  <% if flash[:message] %>
    <%= flash[:message] %>
  <% end %>
  <%= @error %>
    <%= yield %>
  </body>
</html>
